{
  "name": "dcm2jpg-demo",
  "description": "Runs dcm2jpg conversion",
  "version": "v0.3",
  "schema-version": "1.0",
  "image": "xnat/dcm2jpg-demo:latest",
  "type": "docker",
  "command-line": "/usr/local/bin/rundcm2jpg.sh /input /output #some_config# #alt_config# #PROJECT# #SESSION_ID# #SESSION_LABEL# #SCAN_ID#",
  "mounts": [
    {
      "name": "in",
      "writable": false,
      "path": "/input"
    },
    {
      "name": "out",
      "writable": true,
      "path": "/output"
    }
  ],
  "inputs": [
    {
      "name": "PROJECT",
      "label": "Project",
      "required": true
    },
    {
      "name": "SESSION_ID",
      "label": "Session ID",
      "required": true
    },
    {
      "name": "SESSION_LABEL",
      "label": "Session label",
      "required": true
    },
    {
      "name": "SCAN_ID",
      "label": "Scan ID",
      "required": true
    },
    {
      "name": "some_string",
      "label": "Some string",
      "description": "Enter a string",
      "default-value": "default string",
      "required": true
    },
    {
      "name": "some_config",
      "label": "Some config",
      "description": "Select a config",
      "type": "select-one",
      "default-value": "default",
      "required": true,
      "select-values": [
        "one",
        "two",
        "default"
      ]
    },
    {
      "name": "alt_config",
      "label": "Alt config",
      "description": "Select a config",
      "type": "select-many",
      "default-value": "[\"alt\",\"one\"]",
      "required": true,
      "select-values": [
        "one",
        "two",
        "default",
        "alt"
      ],
      "multiple-delimiter": "quoted-space"
    }
  ],
  "outputs": [
    {
      "name": "output",
      "description": "The command's output",
      "required": true,
      "mount": "out"
    }
  ],
  "xnat": [
    {
      "name": "dcm2jpg-demo",
      "label": "dcm2jpg-demo",
      "description": "Run dcm2jpg conversion with demo inputs",
      "contexts": [
        "xnat:imageSessionData"
      ],
      "external-inputs": [
        {
          "name": "session",
          "description": "Input session",
          "type": "Session",
          "required": true,
          "provides-files-for-command-mount": "in",
          "load-children": false
        }
      ],
      "derived-inputs": [
        {
          "name": "project",
          "label": "Project",
          "type": "string",
          "required": true,
          "provides-value-for-command-input": "PROJECT",
          "user-settable": false,
          "derived-from-wrapper-input": "session",
          "derived-from-xnat-object-property": "project-id"
        },
        {
          "name": "session-id",
          "label": "Session ID",
          "type": "string",
          "required": true,
          "provides-value-for-command-input": "SESSION_ID",
          "user-settable": false,
          "derived-from-wrapper-input": "session",
          "derived-from-xnat-object-property": "id"
        },
        {
          "name": "session-label",
          "label": "Session label",
          "type": "string",
          "required": true,
          "provides-value-for-command-input": "SESSION_LABEL",
          "user-settable": false,
          "derived-from-wrapper-input": "session",
          "derived-from-xnat-object-property": "label"
        },
        {
          "name": "scan",
          "label": "Scan",
          "type": "Scan",
          "matcher": "('DICOM' in @.resources[*].label || 'secondary' in @.resources[*].label)",
          "required": true,
          "provides-value-for-command-input": "SCAN_ID",
          "user-settable": true,
          "load-children": true,
          "derived-from-wrapper-input": "session",
          "derived-from-xnat-object-property": "id",
          "multiple": true
        }
      ],
      "output-handlers": [
        {
          "name": "output-resource",
          "accepts-command-output": "output",
          "as-a-child-of": "session",
          "type": "Resource",
          "label": "JPG",
          "format": "JPG"
        }
      ]
    }
  ]
}
